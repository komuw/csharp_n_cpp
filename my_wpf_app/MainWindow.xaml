<Window x:Class="my_wpf_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:my_wpf_app"
        xmlns:res="clr-namespace:my_wpf_app.Resources"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <TextBlock
            Name="myTxtBlk"
            Text="{x:Static res:Resources.Greeting}"
            Height="44"
            Width="102"/>

        <StackPanel>
            <Button x:Name="button"
                    Click="MyBtnId"
                    Content="Click Me"
                    Margin="100"/>

            <!-- 
            This PopupButton exists solely as a PlacementTarget for the Popup element below.
            The `PopupButton_OpenPopup` must match the corresponding event handler in the code-behind(MainWindow.xaml.cs).
            The `GotFocus` is important to open popup when focus occurs, including through keyboard navigation.
             -->
            <Button x:Name="PopupButton"
                    Content="Show Popup Target"
                    Margin="100"
                    Click="PopupButton_OpenPopup"
                    GotFocus="PopupButton_OpenPopup"/>
        </StackPanel>

        <!-- Code for Popup -->
        <!-- 
        Popup is bound using PlacementTarget and we use elementName which must match another whose `x:Name` matches that.
        The Popup appears when the button is clicked or gets focus(including keyboard navigation).
        -->
        <Popup x:Name="MyPopup"
               Placement="Top"
               PlacementTarget="{Binding ElementName=PopupButton}"
               StaysOpen="False"
               AllowsTransparency="True">
            <!-- A Border provides a visual container for the popup's content. -->
            <Border Background="AliceBlue"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="This is a popup!"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    <TextBlock>
                        <!-- The Hyperlink. It requires a RequestNavigate event handler to open the URL. -->
                        <Hyperlink NavigateUri="https://www.google.com"
                                   RequestNavigate="Hyperlink_OnRequestNavigate">
                            Click here to visit Google
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Popup>
        <!-- Code for Popup -->
    </Grid>
</Window>